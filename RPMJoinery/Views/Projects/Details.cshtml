@model RPMJoinery.Models.Project

<br />
<br />


<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        @Html.DisplayFor(modelItem => modelItem.Title)
        <small>@Html.DisplayFor(modelItem => modelItem.Type)</small>
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Projects")">Projects</a>
        </li>
        <li class="breadcrumb-item active">Project @Html.DisplayFor(modelItem => modelItem.Id)</li>
    </ol>

    <!-- Portfolio Item Row -->
    @if (ViewBag.IsAuthenticated)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Html.DisplayFor(modelItem => modelItem.ImgFilePath)" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Project Description</h3>
            <p>@Html.DisplayFor(modelItem => modelItem.Description)</p>
            <h3 class="my-3">Project Details</h3>
            <p>@Html.DisplayFor(modelItem => modelItem.Details)</p>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h4 class="my-4">Related Images</h4>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="card-img-top" src="@Html.DisplayFor(modelItem => modelItem.ImgFilePath2)" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="card-img-top" src="@Html.DisplayFor(modelItem => modelItem.ImgFilePath3)" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="card-img-top" src="@Html.DisplayFor(modelItem => modelItem.ImgFilePath4)" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="card-img-top" src="@Html.DisplayFor(modelItem => modelItem.ImgFilePath5)" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->
    <p>
        
        @Html.ActionLink("Back to List", "Index")
    </p>

</div>
<!-- /.container -->
