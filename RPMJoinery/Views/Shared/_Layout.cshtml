<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="../../img/rpmfavicon.ico" type="image/x-icon" />
    <title> @ViewBag.Title </title>
    <meta name="description" content="@ViewBag.MetaDescription">
    <meta name="keywords" content="@ViewBag.MetaKeywords" />
    <meta name="author" content="">
    <meta name="google-site-verification" content="ealeSFj5DsWKUdF0iSh66svfEYiK8NepNV6WYpacRfI" />

    <!-- Open Graph Meta Tags- used for linking website to social media sites -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <meta property="og:image" content="" />
    <meta property="og:site_name" content="RPM Joinery & Maintenance Dundee" />
    <meta property="og:description" content="Check out http://rpmjoinery.com!  Reliable Dundee Joiners for all your Joinery needs in Dundee, quality services provided kitchens, bathrooms, windows, doors, flooring, decking, complete renovations and more! We take pride in providing top quality services at a great price. Get in touch now for a free no-obligation quote." />

    @Styles.Render("~/Content/css")

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top navcurve">
        <div class="container">
            <!-- <a class="navbar-brand" href="index.html">Start Bootstrap</a> -->
            <a href="@Url.Action("Index","Home")"> <img src="../../img/rpmlogo.png" width="150px" alt="RPM Joinery Logo"> </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" id="home-link" href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="about-link" href="@Url.Action("About","Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="services-link" href="@Url.Action("Services","Home")">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-link" href="@Url.Action("Contact","Home")">Contact</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="projects-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Projects
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                            <a class="dropdown-item" href="@Url.Action("Index","Projects")">All </a>
                            <a class="dropdown-item" href="@Url.Action("Kitchens","Projects")">Kitchens</a>
                            <a class="dropdown-item" href="@Url.Action("Bathroom","Projects")">Bathrooms & Wet Walls</a>
                            <a class="dropdown-item" href="@Url.Action("WindowsDoors","Projects")">Windows & Doors</a>
                            <a class="dropdown-item" href="@Url.Action("DeckingFencing","Projects")">Decking & Fencing</a>
                            <a class="dropdown-item" href="@Url.Action("Maintenance","Projects")">General maintenance</a>
                        </div>
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            <form method="post" action="@Url.Action("LogOff", "Account")" id="signoutfrm" style="display:none;">
                                @Html.AntiForgeryToken()
                            </form>
                            <a href="" class="btn btn-danger" onclick="$('#signoutfrm').submit(); return false;">Log Out</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()
    <hr />



    <div class="credit-container" id="credit-container">
        <a href="@Url.Action("About","Home")"> <img src="../../img/DttLogo.png" height="64" alt="Dundee Trusted Trader Scheme Logo" align="middle"> </a>
        <a href="@Url.Action("About","Home")"> <img src="../../img/ArtsLogo.png" height="64" alt="Angus Reputable Trader Logo" align="middle"> </a>
        <a href="https://www.facebook.com/rpmjoinerydundee/"> <img src="../../img/facebook.png" height="64" alt="Like us on Facebook Logo" align="middle"> </a>
    </div>

    <div class="pre-footer">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
        <div class="container">
            <div class="row centered">
                <div class="col-md-4">
                    <h5><b>Contact</b></h5>
                    <p>57 Denoon Terrace<br />Dundee<br />DD2 2EB</p>
                    <span class="fa fa-phone"></span> <abbr title="Phone">P</abbr>: 07970 058622
                    <br />
                    <span class="fa fa-envelope"></span>
                    <abbr title="Email">E</abbr>:
                    <a href="mailto:rpmdundee@gmail.com">
                        rpmdundee@gmail.com
                    </a>
                </div>
                <div class="col-md-4">
                    <h5><b>Useful Links</b></h5>
                    <h6><a href="@Url.Action("About","Home")">About</a> <a href="@Url.Action("Contact","Home")">Contact</a></h6>
                    <h6><a href="@Url.Action("Services","Home")">Services</a> <a href="@Url.Action("Index","Projects")">Projects</a></h6>
                    <h6><a href="@Url.Action("Kitchens","Projects")">Kitchens</a> <a href="@Url.Action("Bathroom","Projects")">Bathrooms</a></h6>
                    <h6><a href="@Url.Action("DeckingFencing","Projects")">Decking</a> <a href="@Url.Action("WindowsDoors","Projects")">Windows</a></h6>
                    <a href="@Url.Action("Maintenance","Projects")">Maintenance</a>
                </div>
                <div class="col-md-4">
                    <br />
                    <h6><a href="#">XML Site Map</a></h6>
                    <h6><a href="@Url.Action("Cookie","Home")">Cookie Policy</a></h6>
                    <h6><a href="@Url.Action("Login","Account")">RPM Login</a></h6>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
    <!-- Footer -->
<footer class="py-5 bg-dark">
        <p class="m-0 text-center text-white">Copyright &copy; RPM Joinery & Maintainance 2018</p>
        <p class="m-0 text-center text-white">Website Design by Gary Gillespie</p>
    <!-- /.container -->
</footer>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/imageModal")
@RenderSection("scripts", required: false)

